<?xml version="1.0" encoding="utf-8"?>

    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- 连框颜色--><item>
        <shape>
            <solid android:color="#003d79" />
            <corners android:radius="6dp" />

        </shape>
    </item>
        <!-- 背景颜色 -->
        <item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">
            <shape>
                <gradient android:startColor="#000093" android:centerColor="@color/colorPrimary"
                    android:endColor="#9393ff" android:type="linear" android:angle="90"
                    android:centerX="0.5" android:centerY="0.5" />

                <padding android:left="2dp" android:top="2dp" android:right="2dp"
                    android:bottom="2dp" />
                <!-- 应该是圆角 -->
                <corners android:radius="6dp" />
            </shape>
        </item>
    </layer-list>